

<p><strong>Movie:</strong> <%= @movie.title %> </p>

<% if @reviews.blank? %>
 <h3>There's no reviews for this movie.</h3>
	
<% else %>

 <% @reviews.each do |review| %>
	<p><strong>Rating:</strong></p>
	<p><%= review.rating %></p>
	<p><strong> Comment:</strong></p>
	<p><%= review.comment %></p></p>
	

 <% end %>
<% end %>
<%= link_to 'Back', movie_path(@movie) %>