<!DOCTYPE html>
<html>
  <head>
    <title>MovieWire</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav>
    <% if user_signed_in? %>
    <%= link_to "Movies", movies_path %>
    <%= link_to "New movie", new_movie_path %>
     <%= form_tag(destroy_user_session_path, method: :delete, style:'display: inline-block') do %>
     <%=submit_tag "Sign out" %>
    <% end %>
    <%else %>
      <%= link_to "Sing up", new_user_registration_path %>
      <%= link_to "Sing in", new_user_session_path %>
    <%end%>
   
  </nav>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: name %>
  <% end %>
    <%= yield %>
  </body>
</html>
