<h1>Movie listing</h1>


    <p>
	  <strong>Title:</strong>
	  <%= @movie.title %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @movie.description %>
	</p>

	<p>
	  <strong>Movie length:</strong>
	  <%= @movie.movie_length %>
	</p>

	<p>
	  <strong>Director:</strong>
	  <%= @movie.director %>
	</p>

	<p>
	  <strong>Rating:</strong>
	  <%= @movie.rating %>
	</p>


<%= link_to 'Back', movies_path %> |
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= form_tag(movie_path(@movie), method: :delete) do %>
<%= submit_tag "Delete Movie" %>
<% end %>

<% if @reviews.blank? %>
	<h3>There's no reviews for this movie. Would you like to add one?</h3>
	<%=link_to "Write a review", new_movie_review_path(@movie) %>
<% else %>
 <% @reviews.each do |review| %>
	<p><strong>Rating:</strong>
	<%= review.rating %></p>
	<p><strong>Comment:</strong>
	<%= review.comment %></p>
 <% end %>
<% end %>
