<% if @reviews.blank?%>
  <h3>You haven't review any movie yet.</h3>
<% else %>
	<h3>My Reviews</h3>

	<% @reviews.each do |review| %>
	    
		<p><strong>Rating:</strong></p>
		<p><%= review.rating %></p>
		<p><strong> Comment:</strong></p>
		<p><%= review.comment %></p></p>
		

	<% end %>
<% end %>

